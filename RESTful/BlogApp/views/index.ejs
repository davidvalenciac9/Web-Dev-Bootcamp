<% include partials/header %>
<h1>Blogs</h1>

<% blog.forEach(function(blog) { %>
    <h1><%= blog.title %></h1>
    <img src="<%= blog.image %>">
    <span><%=blog.create.toDateString()%></span>
    <p><%-blog.body.substring(0, 100)%> ...</p>
    <a href="blogs/<%= blog._id %>">Read More</a>
<% }); %>

<% include partials/footer %>