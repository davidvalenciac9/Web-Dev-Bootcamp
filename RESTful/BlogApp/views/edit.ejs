<% include partials/header %>
    <div class="ui huge header">
        <p>Edit <%=blog.title%></p>
    </div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea name="blog[body]"><%=blog.body%></textarea>
        </div>
            <button class="ui secondary big button" type="submit" name="Submit">Submit</button>
        </form>
<% include partials/footer %>